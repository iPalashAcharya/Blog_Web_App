        <div class="brand-section">
            <div class="logo">
                <div class="logo-icon">B</div>
                <div class="logo-text">MetaBlog</div>
            </div>
            <div class="brand-tagline">
                A Place for Collaboration and Fun :)
            </div>
        </div>

        <div class="form-section">
            <div class="form-container">
                <div class="form-tabs">
                    <button class="tab-button active" onclick="switchTab('login')">Login</button>
                    <button class="tab-button" onclick="switchTab('signup')">Sign Up</button>
                </div>

                <form class="form active" id="login-form">
                    <div class="form-group">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" id="username" class="form-input" name="username" placeholder="Enter your Username" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" id="password" class="form-input" name="password" placeholder="Enter your password"
                            required>
                    </div>

                    <button type="submit" class="form-button">Sign In</button>


                    <div class="form-divider">
